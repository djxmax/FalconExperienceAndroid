<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fr.maximelucquin.falconexperience">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon"
        android:name="com.orm.SugarApp">

        <meta-data android:name="DATABASE" android:value="falconexperience.db" />
        <meta-data android:name="VERSION" android:value="2" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="fr.maximelucquin.falconexperience" />

        <activity android:name=".views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.SequenceList.SequenceListActivity"
            android:label="@string/title_activity_sequence_list"
            android:parentActivityName=".views.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.maximelucquin.falconexperience.views.MainActivity" />
        </activity>
        <activity
            android:name=".views.SequenceActivity"
            android:label="@string/title_activity_sequence"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>